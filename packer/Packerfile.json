{
  "variables": {
    "source_image_family": "ubuntu-1804-lts",
    "machine_type": "n1-standard-1",
    "region" : "us-central1",
    "zone" : "us-central1-c",
    "project_id": "dishout-285810"
  },
  "builders": [{
      "type": "googlecompute",
      "project_id": "dishout-285810",
      "machine_type": "n1-standard-1",
      "source_image_family": "ubuntu-1804-lts",
      "region": "us-central1",
      "zone": "us-central1-c",
      "image_description": "Jenkins Packer",
      "image_name": "jenkins-pack-{{timestamp}}",
      "disk_size": 16,
      "disk_type": "pd-ssd",
      "ssh_username": "jenkins",
      "account_file": "credential/gcp_credentials.json",
      "image_labels": [{"image-type": "release"}],
      "image_family": "jenkins"
    }],
    "provisioners": [{
      "type": "file",
      "source": "packer/jenkins-setup",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": "ls -lh /tmp/jenkins-setup/files"
    },
    {
      "type": "shell",
      "inline": "ls /home"
    },
    {
      "type": "shell",
      "script": "packer/jenkins-setup/install.sh",
      "pause_before": "10s"
    },
    {
      "type": "shell",
      "script": "packer/jenkins-setup/install-job-dependencies.sh",
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "credential/gcp_credentials.json",
      "destination": "/var/lib/jenkins/gcp_credentials.json"
    },
    {
      "type": "shell",
      "inline": "sudo chown -R jenkins:jenkins /var/lib/jenkins"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'cleanup'",
        "sudo rm -rf /tmp/*"
      ]
    }
  ]
}
